<h1> Yandex Dictionary</h1>
<br/>


<div class='form'>
	<strong><p>Look up text</p></strong>
	<%= form_tag '/lookup', method: "post" do %>
	  <p> <%= label_tag :lang, 'Lang: ' %>
		<% lang_list = langs_collection.map{ |lang| [lang ,lang] } %>
		<%= select_tag :lang, options_for_select(lang_list, 'en-ru')%>
		<p><%= label_tag :text, 'Text: ' %>
		<%= text_area_tag :text %>
		<p><%= submit_tag 'Search' %>
	<% end %>
</div>

<div class="last">
	<% if current_user %>
		<p><strong>Last 10 requests:</strong></p>
		<% last_collection.reverse_each do |request| %>
			<%= request.lang %> - <%= request.text %><br/>
		<% end %>
	<p><%= link_to "Journal", journal_path(required_user: current_user) %>
	<% else %>
		<p> Log in or sign up to save journal of requests </p>
	<% end %> 
</div>

