<h1> Yandex Dictionary</h1>

<p>
	Hello, <%= current_user.username %>.
	<%= link_to('/logout', method: 'delete', ){ 'Logout' } %>
</p>

<%= form_tag('/lookup', method: "p ost") do %>
  <p> <%= label_tag(:lang, 'Lang') %>
	<% lang_list = @langs_collection.map{ |lang| [lang ,lang] } %>
	<p><%= select_tag(:lang, options_for_select(lang_list, 'en-ru'))%>
	<p><%= label_tag(:text, 'Text') %>
	<p><%= text_area_tag(:text) %>
	<p><%= submit_tag('Search') %>
<% end %>

<p>Last 10 requests:</p>
<% @last.reverse_each do |request| %>
	<%= request.lang %>  <%= request.text %><br/>
<% end %>

